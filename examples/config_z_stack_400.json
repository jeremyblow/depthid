{
  "controller": {
    "interface": "grbl",
    "device_name": "COM3",
    "baud_rate": 115200,
    "motors": [
      ["x", 0.50],
      ["y", 0.50],
      ["z", 0.50]
    ]
  },
  "camera": {
    "interface": "spinnaker",
    "camera_index": 0,
    "height": 1200,
    "width": 1920,
    "pixel_format": "Mono 16",
    "exposure_us": 54725.17013549805,
    "gain_db": 30
  },
  "job": {
    "name": "z_stack_400",
    "path": "~/Desktop/data/",
    "mode": "automatic",
    "full_screen": true,
    "save_formats": ["tiff", "raw"],
    "sequence_parameters": "x(0,0,0),y(0,0,0),z(0,-400,-0.5)",
    "pipeline": [
      {"m": "spinnaker", "f": "capture", "i": "camera", "kw": {"wait_before":  0.20, "wait_after": 0.05}},
      {"m": "spinnaker", "f": "transform_ndarray", "i": 0},
      {"m": "opencv", "f": "gray_to_rgb", "i": 1},
      {"m": "opencv", "f": "histogram", "i": 1, "kw": {"bins": 1000}},
      {"m": "mpl", "f": "plot_histogram_fast", "i": 3, "kw": {"log": "10"}},
      {"m": "ui", "f": "display", "i": 2, "kw": {"panel": "main"}},
      {"m": "ui", "f": "display", "i": 4, "kw": {"panel": "sub1"}},
      {"m": "ui", "f": "display_status"},
      {"m": "job", "f": "save", "i": 0, "kw": {"formats": ["tiff", "raw"]}}
    ]
  }
}
